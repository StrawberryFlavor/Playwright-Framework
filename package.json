{
  "name": "playwright-framework",
  "version": "1.0.0",
  "description": "高级Playwright测试框架，提供增强的日志记录、页面对象模式、智能元素识别和错误自动截图功能",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test-chrome": "playwright test --project=chromium",
    "test-firefox": "playwright test --project=firefox",
    "test-webkit": "playwright test --project=webkit",
    "test-ui": "playwright test --ui",
    "report": "playwright show-report",
    "test:quiet": "LOG_PRESET=quiet playwright test",
    "test:verbose": "LOG_PRESET=verbose playwright test",
    "test:dev": "LOG_PRESET=development playwright test",
    "test:prod": "LOG_PRESET=production playwright test"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e",
    "page-object-model",
    "typescript",
    "logger",
    "framework",
    "screenshots"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.0",
    "dotenv": "^16.4.5"
  }
}
